<div class="ui hidden divider"></div>

<div class="ui active tab" data-tab="reto">
  <h2 class="ui header">
    <i class="red flag checkered  icon"></i>
    <div class="content">
      Tu Progreso
      <div class="sub header">Noviembre 2017</div>
    </div>
  </h2>

  <div class="ui teal progress" id="example3">
    <div class="bar">
      <div class="progress"></div>
    </div>
  </div>


  <div class="ui hidden divider"></div>

  <div class="ui active tab" data-tab="tri1">
    <div class="ui grid">
      <% @challenges.each do |challenge| %>
        <div class="four wide column">
        <%= link_to challenge_path(challenge), class: "ui card #{'disabled' if challenge.locked_for? current_user}" do %>
            <div class="ui centered small circular image">
              <%= image_tag "#{challenge.id}.png" %>
            </div>
            <div class="content">
              <div class="header">
                <%= challenge.title %>
              </div>
              <div class="ui blurring vertical segment">
                <div class="ui inverted dimmer"></div>
                <p>
                <%= challenge.description %>
                </p>
              </div>
            </div>
            <div class="extra content">
              <button class="ui button">
                <i class="user icon"></i> Empezar
              </button>
              <span class="right floated"><%= [1,3,5,6,7,9].shuffle.first %>0%</span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= link_to 'New Challenge', new_challenge_path %>
