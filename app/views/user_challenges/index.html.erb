<div class="ui hidden divider"></div>

<div class="ui active tab" data-tab="reto">
  <h2 class="ui header">
    <i class="red flag checkered  icon"></i>
    <div class="content">
      Tu Progreso
      <div class="sub header">Noviembre 2017</div>
    </div>
  </h2>

  <div class="ui teal progress" id="progress-bar">
    <div class="bar">
      <div class="progress"></div>
    </div>
  </div>

  <div class="ui hidden divider"></div>

  <div class="ui active tab" data-tab="tri1">
    <div class="ui grid">
      <% @user_challenges.each do |user_challenge| %>
        <% disabled = user_challenge.status == 'locked' %>
        <div class="four wide column">
          <div class="ui card <%= "#{'disabled' if disabled}" %>">
            <div class="ui centered small circular image">
              <%= image_tag "#{user_challenge.challenge.id}.png" %>
            </div>
            <div class="content">
              <div class="header">
                <%= user_challenge.title %>
              </div>
              <div class="ui blurring vertical segment">
                <div class="ui inverted dimmer"></div>
                <p>
                <%= user_challenge.description %>
                </p>
              </div>
            </div>
            <div class="extra content" >
              <% partial = "user_challenges/components/card_button_#{ user_challenge.status }" %>
              <%= render partial: partial, locals: { user_challenge: user_challenge } %>
              <span class="right floated"><%= "#{[1,3,5,6,7,9].shuffle.first}" %>0%</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
