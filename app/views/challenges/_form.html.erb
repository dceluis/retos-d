<%= form_with(model: challenge, local: true) do |form| %>
  <% if challenge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

      <ul>
      <% challenge.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :challenge_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :challenge_description %>
  </div>

  <div id="nested-form">
    <div class="field">
      <%= form.label :goals %>
      <%= form.fields_for :goals do |goal| %>
        <%= render 'goal_fields', f: goal %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'Add Goal', form, :goals %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
