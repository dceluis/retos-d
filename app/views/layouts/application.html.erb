<!DOCTYPE html>
<html>
  <head>
    <title>Retos</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="ui container">
      <div class="ui large menu">
        <div class="header item">
          <a href="/">Desafios Agua</a>
        </div>
        <% if current_user %>
          <nav class="menu">
            <div class="item">
              <%= link_to 'Desafios', challenges_path %>
            </div>
          </nav>
        <% end %>
        <nav class="right menu">
          <% if current_user %>
            <div class="item">
              <a class="ui primary button">5%</a>
            </div>
            <div class="item">
              <%= link_to 'Cerrar Sesión', sessions_path, method: :delete %>
            </div>
          <% else %>
            <div class="item">
              <%= link_to 'Iniciar Sesión', new_sessions_path %>
            </div>
          <% end %>
        </nav>
      </div>
    </header>
    <section class="ui container">
      <%= yield %>
    </section>
    <footer>

    </footer>
  </body>
</html>
